{
  "name": "formidate",
  "version": "1.0.0",
  "description": "Form validation library",
  "author": "Joshua Uyi <joshuaouyi@gmail.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc && webpack --mode=production",
    "test": "jest --config jestconfig.json",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:coveralls": "npm test -- --coverage && coveralls < coverage/lcov.info",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm test && npm run lint && npm run build",
    "version": "npm run format && git add -A src dist",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*",
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-wer/formidate"
  },
  "license": "MIT",
  "keywords": [
    "form",
    "validator"
  ],
  "dependencies": {
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-numeric-separator": "^7.12.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.20",
    "coveralls": "^3.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3",
    "webpack": "^5.12.3",
    "webpack-cli": "^4.3.1"
  }
}
